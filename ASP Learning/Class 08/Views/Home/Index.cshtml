<h2>Index</h2>
<p>@Html.ValidationSummary("", new { @class = "text-danger" })</p>
@using (Html.BeginForm())
{
    <p>
        Enter User Name: @Html.TextBox("username","", new { @class = "form-control" })
        @Html.ValidationMessage("username", new { @class = "text-danger" })
    </p>
    <p>
        Enter User Age: @Html.TextBox("age","", new { @class = "form-control" })
        @Html.ValidationMessage("age", new { @class = "text-danger" })
    </p>
    <p>
        Enter User Email: @Html.TextBox("email","", new { @class = "form-control" })
        @Html.ValidationMessage("email", new { @class = "text-danger" })
    </p>
    <input class="btn btn-primary" type="submit" value="submit" />
    @Html.Raw(@ViewData["SuccessMessage"])
}
